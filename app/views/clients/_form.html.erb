<p class="bg-danger"><%= alert %></p>

<%= form_for(@client) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </div>  
  <div class="field">
    <%= f.label :national_id %><br>
    <%= f.number_field :national_id %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.fields_for @document do |doc| %><br>
      <%= doc.file_field(:data, class: 'file_input')%>
    <%end%>
  </div>
  <div class="field">
    <%= f.label :danger %><br>
    <%= f.select(:danger) do %>
      <% @danger.each do |d| %>
        <%= content_tag(:option, d.first, value: d.first) %>
      <% end %>
    <% end %>
  </div> 
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div> 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
